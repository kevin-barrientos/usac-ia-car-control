<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/controls_heigth"
    android:gravity="center|bottom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gt.edu.usac.ingenieria.ia.smartcarcontrol.ControlsFragment">

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/control_button_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/control_button_left"
        android:src="@drawable/ic_keyboard_arrow_up_white_36dp"
        style="@style/AppTheme.ControlButtoms"/>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/control_button_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/control_button_up"
        android:src="@drawable/ic_keyboard_arrow_left_white_36dp"
        style="@style/AppTheme.ControlButtoms"/>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/control_button_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/control_button_up"
        android:layout_toEndOf="@+id/control_button_up"
        android:src="@drawable/ic_keyboard_arrow_right_white_36dp"
        style="@style/AppTheme.ControlButtoms" />

</RelativeLayout>
